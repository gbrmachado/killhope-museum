<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.ac.dur.group1.killhope_museum.activity.util.TimelineActivity">
    <ScrollView
        android:fillViewport="true"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:layout_width="0dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eraLayout"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
            <Button
                android:layout_width="fill_parent"
                android:text="Early Earth"
                android:id="@+id/earlyEarth"
                android:background="#87d37c"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
            <Button
                android:layout_width="fill_parent"
                android:text="The Weardale Granite"
                android:id="@+id/theWeardaleGranite"
                android:background="#03c9a9"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
            <Button
                android:layout_width="fill_parent"
                android:text="Carboniferous Sediments"
                android:id="@+id/carboniferousSediments"
                android:background="#81cfe0"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
            <Button
                android:layout_width="fill_parent"
                android:text="Formation of the North Pennine Ore Field"
                android:id="@+id/formationOfTheNorthPennineOreField"
                android:background="#418d70"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
            <Button
                android:layout_width="fill_parent"
                android:text="New Geological Model"
                android:id="@+id/newGeologicalModel"
                android:background="#2c3e50"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
            <Button
                android:layout_width="fill_parent"
                android:text="Advanced Tectonic History"
                android:id="@+id/advancedTectonicHistory"
                android:background="#dcc6e0"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="50dp" />
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:fillViewport="true"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:layout_width="0dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/contentLayout"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/contentText"
                android:text="About 450 million years ago, during the Ordovician period of Earth history, the area we know as northern England was located 15°S of the equator (Matte, 2001). Here it lay beneath a deep ocean, in which mud and silt were deposited.

     As geological time progressed, vast movements of the Earth’s tectonic plates compressed these muds, turning them into slate and forming the Skiddaw Group. (These same movements causes gigantic volcanoes to erupt lava and ash.)
    "/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




